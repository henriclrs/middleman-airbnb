<!-- source/flats/show.html.erb -->

<div class="banner-flat" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%), url('https://kitt.lewagon.com/placeholder/cities/paris'); background-position: center;">
</div>

  <div class="header-flat">
    <div class="container">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <% flat = data.flats[owner] %>
          <div class="header-flat-owner text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", width:"80" %>
            <p><%= owner %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <p class="ratings">
              <%flat.rating.to_i.times do %>
                <i class="fas fa-star checked"></i>
              <%end %>
              <%count = 5 - flat.rating.to_i %>
              <% if count.positive? %>
                <% count.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <div class="col-xs-14 col-sm-4" id="user-flat">
        <form action="#">
          <h4 class="text-center">Book this flat</h4>
          <div class="form-row">
            <div class="form-group col-md-6">
              <input type="text" class="form-control input-lg" placeholder="Check in">
            </div>
            <div class="form-group col-md-6">
              <input type="text" class="form-control input-lg" placeholder="Check out">
            </div>
            <div class="form-group col-xs-12">
              <select name id class="form-control input-lg">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <div class="form-group col-xs-12">
              <a class="btn btn-danger btn-lg col-xs-12">Book it</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="flat-description">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <h2>About this flat</h2>
          <p>This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur.</p>
          <hr>
          <div class="row" id="flat-data">
            <div class="col-xs-12 col-sm-2">
              <p>The space</p>
            </div>
            <div class="col-xs-12 col-sm-5">
              <ul class="list-unstyled">
                <li>Accommodates: <strong>2</strong></li>
                <li>Bathrooms: <strong>1</strong></li>
                <li>Bed type: <strong>Real bed</strong></li>
                <li>Bedrooms: <strong>1</strong></li>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-5">
              <ul class="list-unstyled">
                <li>Beds: <strong>1</strong></li>
                <li>Property type: <strong>Appartement</strong></li>
                <li>Bed type: <strong>Apartment</strong></li>
                <li>Room type: <strong>Entire home/apt</strong></li>
              </ul>
            </div>
          </div>
          <hr>
          <div class="row" id="flat-data">
            <div class="col-xs-12 col-sm-2">
              <p>Amenities</p>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li><i class="fas fa-utensils"></i></i><strong> Kitchen</strong></li>
                <%if flat.wifi %>
                <li><i class="fas fa-wifi"></i><strong> Wifi</strong></li>
                <%end %>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li><i class="fas fa-tv"></i></i><strong> TV</strong></li>
                <li><i class="fas fa-glass-martini"></i></i><strong> Welcome drink</strong></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
